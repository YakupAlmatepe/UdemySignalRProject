@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignalR Restoran Kayıt</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f4f4f4;
        }

        .page-content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-v6-content {
            display: flex;
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-left img {
            width: 100%;
            height: auto;
        }

        .form-detail {
            padding: 30px;
            box-sizing: border-box;
        }

            .form-detail h2 {
                font-size: 24px;
                color: #333;
                margin-bottom: 30px;
                text-align: center;
            }

        .form-row {
            margin-bottom: 20px;
        }

        .input-text {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            font-size: 14px;
            color: #666;
        }

        .btn-primary {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            outline: none;
            border: none;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s;
            cursor: pointer;
            background-color: #007bff;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/colorlib-regform-32/images/volumerix.png" alt="form">
            </div>
            <form class="form-detail" method="post">
                <h2>Yeni Kullanıcı Kaydı</h2>
                <div class="form-row">
                    <input type="text" id="full-name" asp-for="Name" class="input-text" placeholder="Adınız" required>
                </div>
                <div class="form-row">
                    <input type="text" id="full-name" class="input-text" placeholder="Soyadınız" required asp-for="SurName">
                </div>
                <div class="form-row">
                    <input type="text" id="full-name" class="input-text" placeholder="Kullanıcı Adınız" required asp-for="UserName">
                </div>
                <div class="form-row">
                    <input type="text" id="your-email" class="input-text" placeholder="Email Adresiniz" asp-for="Mail" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
                </div>
                <div class="form-row">
                    <input type="password" id="password" class="input-text" placeholder="Şifreniz" asp-for="Password" required>
                </div>
                <button class="btn btn-primary">Kayıt Ol</button>
            </form>
        </div>
    </div>
</body>
</html>