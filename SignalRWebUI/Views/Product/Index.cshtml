﻿
@model List<ResultProductDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}
@* product ındex *@

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Eğitim İşlemleri/ Video - Pdf</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Eğitim İçerikleri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Eğitim ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konu Başlığı</th>
									<th scope="col">Ürün Görsel Url</th>
									<th scope="col">VideoUrl</th>

								@* 	<th scope="col">Fiyat</th> *@
									<th scope="col">Kategori</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach(var item in Model)
									{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.ProductName</td>
										<td>@item.ImageUrl</td>
										<td>@item.VideoUrl</td>
										@* <td>@item.Price</td> *@
										<td>@item.CategoryName</td>
										<td>@item.ProductStatus</td>
										<td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Product/CreateProduct/" class="btn btn-outline-primary">Yeni Eğitim Ürünü Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>