                        $(document).ready(() => {
                            var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7097/SignalRHub").build();
                            connection.start().then(() => {
                                console.log("Bağlantı kuruldu:", connection.state);
                                setInterval(() => {
                                    connection.invoke("SendCategoryCount").catch(err => console.error("SendCategoryCount hatası:", err));
                                }, 1000);
                            }).catch((err) => {
                                console.error("Bağlantı başlatma hatası:", err);
                            });

                            connection.on("ReceiveCategoryCount", (value) => {
                                console.log("Kategori sayısı alındı:", value);
                                $("#categorycount").text(value);
                            });
                        });


                    </script>

